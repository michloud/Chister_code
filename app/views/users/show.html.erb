<div class="booyah-box">
  <div class="row">
    <div class="col-3">
      <%= image_tag 'user.png', class: 'img-fluid'%>
    </div>
    <div class= "text-center col-9">
      <h2><%= @user.email %></h2> 
      <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
      <hr />
      <br />
      <h4>Total comments: <%= @user.comments.count %></h4>
      <h4>Total 5 star reviews: <%= @user.comments.where(rating: '5_stars').count %></h4>
    </div>
  </div>
  <div class="clear"></div>
</div>

<br /><br />

<h2 class="text-center">My Comments</h2>

<br />

<div class="row">
  <% @user.comments.each do |comment| %>
    <div class="col-12 col-sm-6">
      <h2 class="text-center"><%= link_to comment.place.name, place_path(comment.place) %></h2>
      <blockquote>
        <% if comment.humanized_rating.present? %>
          <b><%= comment.humanized_rating %></b> -
        <% end %>
        <%= comment.message %>
        <small><%= comment.user.email %></small>
      </blockquote>
    </div>
  <% end %>
</div>

<div class="clear"></div>
